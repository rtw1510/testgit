<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="oracle-EnCtfItgInfMapper">
	<resultMap id="EnCtfItgInf_Result" type="com.dhcc.xml.ent.entity.baseinfo.EnCtfItgInf">
		<result column="InfRecType" property="InfRecType"/>
		<result column="EntName" property="EntName"/>
		<result column="EntCertType" property="EntCertType"/>
		<result column="EntCertNum" property="EntCertNum"/>
		<result column="RptDate" property="RptDate"/>
		<result column="OthEntCertType" property="OthEntCertType"/>
		<result column="OthEntCertNum" property="OthEntCertNum"/>
		<result column="CertAssFlg" property="CertAssFlg"/>
	</resultMap>

	<sql id="EB_CustCtf_info_Columns340">
		<![CDATA[
			InfRecType,
			EntName,
			EntCertType,
			EntCertNum,
			RptDate,
			OthEntCertType,
			OthEntCertNum,
			CertAssFlg
		]]>
	</sql>

	<!-- 机构关联限制 -->
	<sql id="EB_CustCtf_info_select_where340">
		<if test="br_no !=''">
			AND	EXISTS (SELECT 1 FROM S_ORG_INFO S WHERE T1.BR_NO=S.BR_NO START WITH S.BR_NO=#{br_no} CONNECT BY PRIOR S.BR_NO = S.UP_ONE)
		</if>
		<if test="tx_date !='' and tx_date!=null">
			AND T1.TX_DATE = #{tx_date,jdbcType=VARCHAR}
		</if>

		<if test="record_id !='' and record_id !=null">
			AND T1.record_id = #{record_id,jdbcType=VARCHAR}
		</if>

		<if test="record_id ='' or record_id=null">
			AND T1.RPT_TYPE = '1' AND T1.CHECK_STS = '1'
		</if>

		<if test="_fromNumber != null and _toNumber !=null">
			AND T1.PAGENUMBER  <![CDATA[ < ]]> #{_toNumber} AND T1.PAGENUMBER  <![CDATA[ >= ]]> #{_fromNumber}
		</if>
	</sql>

	<!-- 读取数据 -->
	<select id="EnCtfItgInfJob_selectAllInfo" resultMap="EnCtfItgInf_Result">
		SELECT <include refid="EB_CustCtf_info_Columns340" /> FROM EB_CUSTCTF_INFO T1
		WHERE T1.INFRECTYPE = '340'
		<include refid="EB_CustCtf_info_select_where340" />
	</select>
	
	<!-- 更新需要生成报文的数据项 -->
	<update id="EnCtfItgInfJob_updatePageNumber">
		UPDATE EB_CUSTCTF_INFO T1 SET T1.PAGENUMBER = ROWNUM WHERE T1.RPT_TYPE = '1' AND T1.CHECK_STS = '1' AND T1.INFRECTYPE = '340'
		<include refid="EB_CustCtf_info_select_where340" />
	</update>
	
	<!-- 获取最大的待生成报文的条数 -->
	<select id="EnCtfItgInfJob_getMaxPageNumber" resultType="String">
		SELECT MAX(T1.PAGENUMBER) FROM EB_CUSTCTF_INFO T1 WHERE T1.RPT_TYPE = '1' AND T1.CHECK_STS = '1' AND T1.INFRECTYPE = '340'
		<include refid="EB_CustCtf_info_select_where340" />
	</select>

	<!-- 批量校验回刷校验状态-->
	<update id="EnCtfItgInfJob_updateCheckSts">
		UPDATE EB_CUSTCTF_INFO T1
		SET T1.CHECK_STS = '1'
		WHERE T1.RPT_TYPE = '1'
		AND T1.INFRECTYPE = '340'
		<include refid="EB_CustCtf_info_select_where340" />
	</update>
	<delete id="EnCtfItgInfJob_dleError">
		DELETE V_ERROR_INFO B
		WHERE EXISTS (SELECT 1
		FROM EB_CUSTCTF_INFO T1
		WHERE B.RECORD_ID = T1.RECORD_ID
		AND T1.RPT_TYPE = '1' AND T1.INFRECTYPE = '340'
		<include refid="EB_CustCtf_info_select_where340" />
		)
	</delete>

</mapper>