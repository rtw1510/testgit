<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="oracle-InSecAcctDelMapper">
	<resultMap id="InSecAcctDel_Result" type="com.dhcc.xml.per.entity.guarantee.InSecAcctDel">
		<result column="InfRecType" property="InfRecType" />
		<result column="DelRecCode" property="DelRecCode" />
		<result column="DelSgmtCode" property="DelSgmtCode" />
		<result column="DelStartDate" property="DelStartDate" />
		<result column="DelEndDate" property="DelEndDate" />
	</resultMap>
	<sql id="Pb_AcctDlt_Info_Columns233">
		<![CDATA[
			InfRecType,
			DelEndDate, 
			DelStartDate,
			DelSgmtCode,
			DelRecCode
		]]>
	</sql>
 	<!-- 机构关联限制 -->
	<sql id="Pb_AcctDlt_info_select_where233">
		<if test="br_no !=''">
			and	EXISTS (SELECT 1 FROM S_ORG_INFO S WHERE T1.BR_NO=S.BR_NO START WITH S.BR_NO=#{br_no} CONNECT BY PRIOR S.BR_NO = S.UP_ONE)
		</if>

		<if test="tx_date !=''">
			and T1.TX_DATE = #{tx_date,jdbcType=VARCHAR}
		</if>

		<if test="record_id !='' and record_id !=null">
			and T1.record_id = #{record_id,jdbcType=VARCHAR}
		</if>
		<if test="record_id ==null">
			and T1.RPT_TYPE = '1' AND T1.CHECK_STS = '1'
		</if>
		<if test="_fromNumber != null and _toNumber !=null">
			and T1.PAGENUMBER  <![CDATA[ < ]]> #{_toNumber} AND T1.PAGENUMBER  <![CDATA[ >= ]]> #{_fromNumber}
		</if>

	</sql>
	<!-- 读取数据 -->
	<select id="InSecAcctDelJob_selectAllInfo" resultMap="InSecAcctDel_Result">
		SELECT <include refid="Pb_AcctDlt_Info_Columns233" /> FROM PB_ACCTDLT_INFO T1
		WHERE T1.INFRECTYPE = '233'
		<include refid="Pb_AcctDlt_info_select_where233"/>
	</select>
	
	<!-- 更新需要生成报文的数据项 -->
	<update id="InSecAcctDelJob_updatePageNumber">
		UPDATE PB_ACCTDLT_INFO T1 SET T1.PAGENUMBER = ROWNUM WHERE T1.RPT_TYPE = '1' AND T1.CHECK_STS = '1' AND T1.INFRECTYPE = '233'
		<include refid="Pb_AcctDlt_info_select_where233" />
	</update>
	
	<!-- 获取最大的待生成报文的条数 -->
	<select id="InSecAcctDelJob_getMaxPageNumber" resultType="String">
		SELECT MAX(T1.PAGENUMBER) FROM PB_ACCTDLT_INFO T1 WHERE T1.RPT_TYPE = '1' AND T1.CHECK_STS = '1' AND T1.INFRECTYPE = '233'
		<include refid="Pb_AcctDlt_info_select_where233" />
	</select>

	<!-- 批量校验回刷校验状态-->
	<update id="InSecAcctDelJob_updateCheckSts">
		UPDATE PB_ACCTDLT_INFO T1 SET T1.CHECK_STS = '1'
		WHERE T1.RPT_TYPE = '1' AND T1.INFRECTYPE = '233'
		<include refid="Pb_AcctDlt_info_select_where233" />
	</update>
	<delete id="InSecAcctDelJob_dleError">
		DELETE V_ERROR_INFO B
		WHERE EXISTS (SELECT  1
		FROM PB_ACCTDLT_INFO T1
		WHERE B.RECORD_ID = T1.RECORD_ID
		AND T1.RPT_TYPE = '1' AND T1.INFRECTYPE = '233'
		<include refid="Pb_AcctDlt_info_select_where233" />
		)
	</delete>

</mapper>